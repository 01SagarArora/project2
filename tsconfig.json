{
  "compilerOptions": {
    "module": "esnext"                             ,
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,    
    "outDir": "./dist",
    "moduleResolution": "node",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsx"
  },
  "paths": {
    "@middlewares/*": ["src/server/middlewares/*"]
  },
  "include": [
    "webpack/*.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}